<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/card_elevation"
        app:cardMaxElevation="@dimen/card_elevation">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue"
                android:padding="@dimen/margin_xxl">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:src="@drawable/enter_64px" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_sm"
                        android:layout_marginLeft="@dimen/margin_sm"
                        android:text="Clock in?"
                        android:textColor="@color/white"
                        android:textSize="@dimen/h3P5" />
            </LinearLayout>

        </FrameLayout>

        <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_xl"
                android:stretchColumns="1">

            <TableRow android:layout_marginBottom="@dimen/margin_xxl">

                <ImageView
                        android:id="@+id/iv_avatar"
                        android:layout_width="100dp"
                        android:layout_height="100dp" />

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginStart="@dimen/margin_sm"
                        android:layout_marginLeft="@dimen/margin_sm"
                        android:orientation="vertical">


                    <TextView
                            android:id="@+id/tv_fullname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Karl Vincent Mirafuente"
                            android:textColor="@color/black"
                            android:textSize="@dimen/h4"
                            android:textStyle="bold" />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin_xxl"
                            android:text="Employee"
                            android:textSize="@dimen/h5" />

                </LinearLayout>
            </TableRow>
        </TableLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end">

            <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:padding="@dimen/margin_xl">

                <TableRow android:layout_marginBottom="@dimen/margin_sm">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Time in:"
                            android:textSize="@dimen/h5" />

                    <TextView
                            android:id="@+id/tv_time_in"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_sm"
                            android:layout_marginLeft="@dimen/margin_sm"
                            android:gravity="end"
                            android:text="08:00 AM"
                            android:textColor="@color/black"
                            android:textSize="@dimen/h5" />
                </TableRow>

                <TableRow>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Time out:"
                            android:textSize="@dimen/h5" />

                    <TextView
                            android:id="@+id/tv_time_out"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_sm"
                            android:layout_marginLeft="@dimen/margin_sm"
                            android:gravity="end"
                            android:text="05:00 PM"
                            android:textColor="@color/black"
                            android:textSize="@dimen/h5" />
                </TableRow>
            </TableLayout>
        </RelativeLayout>

        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_xxl"
                android:text="Clock in"
                android:textColor="@color/white"
                app:backgroundTint="@color/blue" />
    </LinearLayout>
</android.support.v7.widget.CardView>