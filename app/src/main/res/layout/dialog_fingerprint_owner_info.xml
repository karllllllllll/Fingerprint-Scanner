<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#272727"
            android:orientation="vertical">

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_xxl">

            <LinearLayout
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:src="@drawable/enter_64px" />

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_sm"
                            android:layout_marginLeft="@dimen/margin_sm"
                            android:text="Clock in?"
                            android:textColor="@color/white"
                            android:textSize="@dimen/h3P5" />


                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

        <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_xl"
                android:stretchColumns="1">

            <TableRow android:gravity="center">


                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/margin_sm"
                        android:layout_marginLeft="@dimen/margin_sm"
                        android:gravity="center"
                        android:orientation="vertical">

                    <ImageView
                            android:id="@+id/iv_avatar"
                            android:layout_width="100dp"
                            android:layout_height="100dp" />

                    <TextView
                            android:id="@+id/tv_fullname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Karl Vincent Mirafuente"
                            android:textColor="@color/white"
                            android:textSize="@dimen/h4"
                            android:textStyle="bold" />

                    <TableLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">


                        <TableRow>

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Current time:"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/h5" />

                            <TextView
                                    android:id="@+id/tv_current_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/margin_sm"
                                    android:layout_marginLeft="@dimen/margin_sm"
                                    android:gravity="end"
                                    android:text="10:00 AM"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/h4"
                                    android:textStyle="bold" />
                        </TableRow>
                    </TableLayout>

                </LinearLayout>
            </TableRow>
        </TableLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

            <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:padding="@dimen/margin_xl">

                <TableRow android:layout_marginBottom="@dimen/margin_sm">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Time in:"
                            android:textColor="@color/white"
                            android:textSize="@dimen/h5" />

                    <TextView
                            android:id="@+id/tv_time_in"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_sm"
                            android:layout_marginLeft="@dimen/margin_sm"
                            android:gravity="end"
                            android:text="08:00 AM"
                            android:textColor="@color/white"
                            android:textSize="@dimen/h5"
                            android:textStyle="bold" />
                </TableRow>

                <TableRow>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Time out:"
                            android:textColor="@color/white"
                            android:textSize="@dimen/h5" />

                    <TextView
                            android:id="@+id/tv_time_out"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_sm"
                            android:layout_marginLeft="@dimen/margin_sm"
                            android:gravity="end"
                            android:text="05:00 PM"
                            android:textColor="@color/white"
                            android:textSize="@dimen/h5"
                            android:textStyle="bold" />
                </TableRow>

                <TableRow>

                </TableRow>
            </TableLayout>
        </RelativeLayout>

        <Button
                android:id="@+id/btn_clock_in_out"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_xxl"
                android:layout_marginTop="@dimen/margin_sm"
                android:layout_marginRight="@dimen/margin_xxl"
                android:layout_marginBottom="@dimen/margin_xxl"
                android:text="Clock in"
                android:textColor="@color/white"
                app:backgroundTint="#1DB954" />

    </LinearLayout>
</android.support.v7.widget.CardView>